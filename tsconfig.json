{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./compiled",
    "strict": true,
    "esModuleInterop": true,
    "types": ["@twilio-labs/serverless-runtime-types/index.d.ts"],
    // Twilio types library throw an error that we can do nothing about
    "skipLibCheck": true,
    "noEmitOnError": true,
    "sourceMap": true
  },
  "include": ["functions/**/*.ts"],
}
